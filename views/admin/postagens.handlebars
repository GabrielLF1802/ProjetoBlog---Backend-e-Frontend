<h2>Lista de posts:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-4">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria:{{categoria.nome}}</small><br>

            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Postagem</button></a>
            <form action="/admin/postagens/delet" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-4">Deletar</button>
            </form>

        </div>
    </div>



{{else}}
    <h4>Não há postagens registradas</h4>

{{/each}}