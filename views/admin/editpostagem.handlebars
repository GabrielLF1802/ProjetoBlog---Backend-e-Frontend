{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}


<div class="card">
    <div class="card-body">
        <input type="hidden" name="id" value="{{postagens._id}}">
        <form action="/admin/postagens/edit" method="POST">
            <h4>Nova Postagem:</h4>
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" placeholder="Título da postagem" value="{{postagens.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" placeholder="Slug da postagem" value="{{postagens.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição da postagem" value="{{postagens.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" placeholder="Conteúdo do post..." class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>

                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>

                {{/each}}
            </select>
            <form action="/admin/postagens/edit" method="POST">
                <button class="btn btn-success mt-4" type="submit">Salvar</button>
            </form>


        </form>
    </div>
</div>